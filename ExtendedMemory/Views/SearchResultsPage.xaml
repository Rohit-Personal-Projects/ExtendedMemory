<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ExtendedMemory.Views.SearchResultsPage"
             Title="Search Results" >

    <ContentPage.Content>
        <StackLayout x:Name="stackResult">
            <Label />
            
            <Button HorizontalOptions="Start"
                Text="Back"
                Clicked="BackToSearch" />

            <Label x:Name="headerSearchResults"
                Text="Search Results"
                HorizontalTextAlignment="Center" VerticalOptions="Start" />

            <ListView x:Name="Memories"
                ItemsSource="{Binding ListViewItems}" />
            
        </StackLayout>
    </ContentPage.Content>

</ContentPage>